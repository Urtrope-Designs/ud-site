<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/assets/main.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <style>@import url('https://fonts.googleapis.com/css2?family=Montserrat+Alternates&family=Raleway&display=block');</style>
  </head>
  <body class="font-sans bg-bg text-text">
    <header class="flex flex-wrap justify-start border-b border-secondary border-dashed">
      <h1 class="font-headline font-bold m-4 animate-fade-in"><a href="{{ '/' | url }}" class="hover:underline">{{ metadata.title }}</a></h1>
      <ul class="font-headline m-4 animate-fade-in">
        {%- for nav in collections.nav | reverse -%}
        <li class="inline-block mr-4{% if nav.url == page.url %} underline font-bold{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
        {%- endfor -%}
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }} px-4 py-6 animate-fade-in"{% endif %}>

      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
